<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#047A62">

    <TextView
        android:id="@+id/newname"
        android:layout_width="77dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="name"
        android:textColor="#AFA975"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dep"
        android:layout_width="146dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:text="department"
        android:textColor="#AFA975"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idf" />

    <TextView
        android:id="@+id/idf"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text=" id   :"
        android:textColor="#AFA975"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newname" />

    <EditText
        android:id="@+id/namef"
        android:layout_width="199dp"
        android:layout_height="43dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/newname"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ids"
        android:layout_width="197dp"
        android:layout_height="46dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/idf"
        app:layout_constraintTop_toBottomOf="@+id/namef" />

    <Spinner
        android:id="@+id/debspinner"
        android:layout_width="181dp"
        android:layout_height="47dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:entries="@array/department"
        app:layout_constraintEnd_toStartOf="@+id/dep"
        app:layout_constraintTop_toBottomOf="@+id/ids" />

    <Button
        android:id="@+id/addf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:text="ADD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/debspinner" />

    <Button
        android:id="@+id/backf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:text="BACk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addf" />

</androidx.constraintlayout.widget.ConstraintLayout>